<?xml version="1.0" encoding="ISO-8859-1"?>

<!-- $Id$ -->
<ivy-module version="1.0">

    <info organisation="org.dellroad" module="dellroad-stuff">
        <license name="Apache License, Version 2.0" url="http://www.apache.org/licenses/LICENSE-2.0"/>
        <description homepage="http://dellroad-stuff.googlecode.com/"/>
    </info>

    <configurations>
        <conf name="build" transitive="false" description="JARs required at build time"/>
        <conf name="test" extends="build" description="JARs required during testing"/>
    </configurations>

    <dependencies>
        <dependency force="true" org="com.vaadin" name="vaadin" rev="6.6.6" conf="build->default"/>
        <dependency force="true" org="javax.servlet" name="servletapi" rev="3.0" conf="build->default"/>
        <dependency force="true" org="javax.validation" name="validation-api" rev="1.0.0.GA" conf="build->default"/>
        <dependency force="true" org="net.sourceforge.jibx" name="jibx" rev="1.2.3" conf="build->runtime-base"/>
        <dependency force="true" org="net.sourceforge.java-readline" name="java-readline" rev="0.8.0" conf="build->default"/>
        <dependency force="true" org="org.jmock" name="jmock" rev="2.5.1" conf="build,test->core"/>
        <dependency force="true" org="org.hamcrest" name="hamcrest" rev="1.1" conf="build->default"/>
        <dependency force="true" org="org.slf4j" name="slf4j" rev="1.6.1" conf="build->default;test->log4j"/>
        <dependency force="true" org="org.springframework" name="spring" rev="3.0+"
          conf="build->aop,aspects,context-support,expression,orm,oxm,tx,web-servlet"/>
        <dependency force="true" org="org.aopalliance" name="aopalliance" rev="1.+" conf="build->default"/>
        <dependency force="true" org="org.hibernate" name="hibernate-validator" rev="4.1.0.Final" conf="test->default"/>
        <dependency force="true" org="org.aspectj" name="aspectj" rev="1.6+" conf="build->tools"/>
    </dependencies>

</ivy-module>
